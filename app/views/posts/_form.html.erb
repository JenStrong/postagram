<%= form_with(model: post, local: true) do |form| %>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>

  <div class="actions">
    <%= form.submit "Create Post" %>
  </div>
<% end %>
